@model IEnumerable<NoteTaking.Models.Note>

@{
    ViewData["Title"] = "Notes List";
}

<h2>Notes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No notes available.</td>
            </tr>
        }
        else
        {
            foreach (var note in Model)
            {
                <tr>
                    <td>@note.Title</td>
                    <td>@note.Description</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Notes" asp-route-id="@note.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Notes" asp-route-id="@note.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add Note</a>
